<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00135A"
        android:padding="10dp"
        android:id="@+id/main_toolbar">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circular_bg"
            android:src="@drawable/profile1"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:id="@+id/MainPfp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:layout_toEndOf="@id/MainPfp"
            android:id="@+id/TvCurrUser"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true" />

        <ImageButton
            android:id="@+id/PfBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"

            android:background="@android:color/transparent"
            android:src="@drawable/options" />
    </RelativeLayout>

    <ListView
        android:id="@+id/ChatsListView"
        android:background="@drawable/edit_text_rounded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_toolbar" />

    <TextView
        android:id="@+id/noChatsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hay chats"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:id="@+id/addChatBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:clickable="true"
        android:background="@drawable/plus"
        android:contentDescription="add_chat"/>

</RelativeLayout>



